{
  "name": "@opentui-ui/styles",
  "version": "0.0.2",
  "description": "Styling engine for OpenTUI UI components with type-safe variants and composition",
  "author": "Matt Simpson",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msmps/opentui-ui.git",
    "directory": "packages/styles"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/msmps/opentui-ui/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/msmps/opentui-ui#readme",
  "keywords": [
    "styles",
    "variants",
    "ui",
    "components",
    "tui",
    "terminal",
    "cli",
    "opentui"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsdown": "^0.18.2",
    "typescript": "^5"
  }
}
