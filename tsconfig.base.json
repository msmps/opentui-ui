{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path mappings for monorepo packages (resolves to source)
    "baseUrl": ".",
    "paths": {
      "@opentui-ui/core": ["packages/core/src"],
      "@opentui-ui/react": ["packages/react/src"],
      "@opentui-ui/react/*": ["packages/react/src/*"],
      "@opentui-ui/solid": ["packages/solid/src"],
      "@opentui-ui/solid/*": ["packages/solid/src/*"],
      "@opentui-ui/styles": ["packages/styles/src"],
      "@opentui-ui/styles/*": ["packages/styles/src/*"],
      "@opentui-ui/utils": ["packages/utils/src"],
      "@opentui-ui/utils/*": ["packages/utils/src/*"],
      "@opentui-ui/dialog": ["packages/dialog/src"],
      "@opentui-ui/dialog/*": ["packages/dialog/src/*"],
      "@opentui-ui/toast": ["packages/toast/src"],
      "@opentui-ui/toast/*": ["packages/toast/src/*"]
    }
  }
}
